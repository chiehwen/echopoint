div#login-logo
	h3.subheader search yelp for your business

div(class="form login-page-containers float-left")
	form(ng-submit='network.yelp.save()', id="create-business-form", class="yelp-business-id-form", accept-charset="utf-8")
		fieldset
			div(class="input text required")
				label business name
				input(ng-model='network.yelp.name', type="text", name="name", id="yelp-business-name")
			div(class="input text")
				label city
				input(ng-model='network.yelp.city', type="text", name="name", id="yelp-business-city")
			div(class="input text")
				label state
				input(ng-model='network.yelp.state', type="text", name="name", id="yelp-business-state")
		div.submit
			input(type='submit', value='submit')

