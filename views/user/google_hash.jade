include ../mixins
extends ../layout

block content
	script console.log(!{JSON.stringify(locals)});
	div
		- if (locals.hasMessages) {
			div#login-notice-header
				h1 #{locals.messages}
		- }
		div#login-logo
			a(href="/") vocada
			em 0.0.1
			h3.subheader update timestamp hash
		div(class="form login-page-containers float-left")
			form(action="/admin/google-hash", method="GET", id="create-user-form", accept-charset="utf-8", style="width:500px")
				input(type="hidden", name="_method", value="GET")
				fieldset
					div(class="input text required")
						label input timestamp hash
						input(type="text", name="ghash", placeholder="#{locals.current_hash}",id="create-user-name", required)
					div
						a(href='https://plus.google.com/100271274097694780455/about', target='_blank', style='font-size:22px')
							i.icon-google-plus
				div.submit
					input(type="submit", value="Update")
		div#login-powered
			img(src="http://speaksocial.tv/img/powered-by-speak-social.png")